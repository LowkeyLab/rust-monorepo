#!/usr/bin/env bash
#MISE description="Run Tailwind CSS compiler with watch mode"
#MISE sources=["input.css", "tailwind.config.js", "src/**/*.rs"]
set -euo pipefail

echo "🎨 Starting Tailwind CSS compiler..."
echo "📂 Input: ./input.css"
echo "📁 Output: ./assets/tailwind.css"
echo "👀 Watch mode enabled"

# Run Tailwind CSS compiler with watch mode
pnpm tailwindcss -i ./input.css -o ./assets/tailwind.css --watch
